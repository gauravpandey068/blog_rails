<% content_for :page_title, @post.title  %>

<section class="section">

    <nav class="level">
        <div class="level-left">
            <p class="level-item tag is-info is-light">
                Uploaded at: <%= @post.created_at %>
            </p>
        </div>
        <div class="level-right">
            <p class="level-item">
                <%= link_to "Edit", edit_post_path(@post), class:"button is-info" %>
            </p>
            <p class="level-item">
                <%= link_to "Delete", post_path(@post),method: :delete, data: { confirm: "Are you sure? "} , class:"button is-danger" %>
            </p>
        </div>
    </nav>

    <div class="content">
        <%= simple_format(@post.content) %>
    </div>

</section>
<section class="comments section">
  <h2 class="subtitle is-5">
    <span class="tag is-primary"> <%= @post.comments.count %> </span> Comments
  </h2>
  <%= render @post.comments %>

  <div class="comments-form">
    <h3 class="subtitle is-4">Leave a comment</h3>
    <%= render 'comments/form' %>

  </div>
</section>
