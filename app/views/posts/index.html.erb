
<% content_for :page_title, "Home" %>

<div class="section">
    <% @posts.each do |post| %>
        <div class="card">
            <div class="card-content">
                <div class="content">
                    <p class="title is-4">
                        <%= link_to post.title, post %>
                    </p>
                </div>
                <div class="content">
                    <%= truncate(post.content) %>
                </div>
                <div class="content">
                    <time datetime="2016-1-1">Uploaded at: <%= post.created_at %></time>
                    <div class="comment-count"><span class="tag is-danger is-rounded"> <%= post.comments.count %> Comments </span></div>
                </div>
            </div>
        </div>
    <% end %>
</div>
